{
    "name": "@storybook-extras/monorepo",
    "version": "0.0.2",
    "license": "MIT",
    "author": {
        "name": "Mostafa Sherif",
        "email": "mosherif87@gmail.com"
    },
    "scripts": {
        "************ DEV **************": "",
        "start": "npm run storybook",
        "storybook": "nx storybook",
        "build:watch": "nx run-many --target=build:watch --all --parallel=10 --exclude=demo",
        "************ PROD **************": "",
        "build": "nx run-many --target=build --all --parallel=10 --exclude=demo",
        "build:storybook": "nx build:storybook",
        "chromatic": "nx chromatic",
        "release": "auto shipit"
    },
    "private": true,
    "devDependencies": {
        "@auto-it/all-contributors": "^10.37.6",
        "@auto-it/conventional-commits": "^10.37.6",
        "@auto-it/first-time-contributor": "^10.37.6",
        "@auto-it/gh-pages": "^10.37.6",
        "@auto-it/npm": "^10.37.6",
        "@auto-it/released": "^10.37.6",
        "@nrwl/nx-cloud": "latest",
        "auto": "^10.3.0",
        "nx": "latest",
        "prettier": "^2.6.2"
    },
    "workspaces": [
        "demo",
        "packages/*"
    ],
    "auto": {
        "plugins": [
            "all-contributors",
            "conventional-commits",
            "first-time-contributor",
            [
                "gh-pages",
                {
                    "buildCommand": "npm run build && npm run build:storybook",
                    "dir": "./demo/storybook-static"
                }
            ],
            "npm",
            "released"
        ]
    }
}
